  <div class="row">
    <div class="col-sm-3"><img src="/images/viking_girl.jpg" height="100" width="100"></div>
  </div>
  <div class="row">
    <div class="col-sm-3">Username</div>
    <div class="col-sm-3">{{user.username}}</div>
  </div>
  <div class="row">
    <div class="col-sm-3">Email</div>
    <div class="col-sm-3">{{user.email}}</div>
  </div>
  <div class="row">
    <div class="col-sm-3">Age</div>
    <div class="col-sm-3">{{profile.age}}</div>
  </div>
  <div class="row">
    <div class="col-sm-3">City</div>
    <div class="col-sm-3">{{profile.city}}</div>
  </div>
</div>
